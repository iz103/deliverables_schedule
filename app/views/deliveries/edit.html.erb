<h1>Edit Delivery</h1>

<%= form_for([@deliverable, @delivery]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :planned_date %><br />
    <%= f.text_field :planned_date %>
  </p>
  <p>
    <%= f.label "Delivery Status" %>
    <%= collection_select(:delivery, :status_id, Status.all, :id, :name) %>
   </p>
   <!-- <p>
    <%#= collection_select(:delivery, :deliverable_id, Deliverable.all, :id, :number) %>
   </p> -->
  <p>
    <%= f.submit 'update' %>
  </p>
<% end %>

<%= link_to "All deliveries", deliverables_path %></br>
<%#= link_to "Back to #{@deliverable.number} deliveries", deliverable_deliveries_path(@deliverable) %>

<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "application" %>
<script type="text/javascript" charset="utf-8">

$(function() {
  $("#delivery_planned_date").datepicker({dateFormat: "dd/mm/yy"});
});

</script>
