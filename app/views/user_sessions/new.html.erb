<%# title "Login"%>
<div id="login-header">
  <h2>Login</h2>	
</div>

<div id="login-form">
  <%= form_for @user_session, :url => {:action => :create} do |f| -%>
    <%= f.error_messages%>
	<p>
	  <%= f.label :username %>
	  <%= f.text_field :username %>
	 </p>
	   <%= f.label :password %>
	   <%= f.password_field :password %>
	 </p>
	 <p><%= f.submit "Log in" %></p>
	<% end -%>	
</div>

