.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", statuses_path
      / %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_status_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_status_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Status
    .inner
      = form_for @status, :url => status_path(@status), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
