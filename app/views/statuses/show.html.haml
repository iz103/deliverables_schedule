.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", statuses_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_status_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", status_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.status.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @status.name
      %p
        %b
          = t("activerecord.attributes.status.position", :default => t("activerecord.labels.position", :default => "Position"))
          \:
        = @status.position
      %p
        %b
          = t("activerecord.attributes.status.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @status.description
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_status_path(@status), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), status_path(@status), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
