= render :file => 'layouts/application'
.block{:id => "block-text"}
  .secondary-navigation
    %ul{:class => "wat-cf"}
      %li= link_to "Deliveries", deliverables_path
      %li= link_to "Statuses", statuses_path
      %li{:class => "active"}
      = link_to "Dashboards", deliveries_path
  .content
    %h2{:class => "title"}
      A46 Dashboard
    .inner    
= content_for :sidebar do
  .block
    %h3 Dashboards for
    %ul{:class => "navigation"}
      %li=link_to "All Deliveries", deliveries_path
      - Deliverable.discipline_counts.each do |tag|
        - unless Deliverable.tagged_with(tag).count < 1
          %li
            = link_to tag.name, :controller => "deliverables", :action => "list_for_tag", :id => tag.id
      - Status.all(:order => "position").each do |status|
        %li
          = link_to status.name, :controller => "statuses", :action => "list_for_status", :id => status.id