<%= render :file => 'layouts/application' %>
<% if @deliverables || @deliveries %>
  <% id = "block-table" %>
<% elsif @statuses %>
  <% id = "block-list" %>
<% end %>
<div class="block" id="block-table">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <% if @deliverables %>
        <li class="active">
      <% else %>
        <li>
          <%= link_to "Deliveries", deliverables_path %>
      <% end %>
      </li>
      <% if @statuses %>
        <li class="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to "Statuses", statuses_path %>
      </li>
    </ul>
    
  </div>
  <div class="content">
    <h2 class="title">
      Tables
    </h2>
    <div class="inner">
      <%= render :partial => "deliverables" %>
    </div>
    
  </div>
</div>
<% content_for :sidebar do %>
  <div class="block">
    <h3>Deliveries</h3>
    <div class="content">
      <%= render :partial => "search_form" %>
    </div>
  </div>
<% end %>