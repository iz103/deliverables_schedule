!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html'}/
    = javascript_include_tag "jquery.min", "jquery.flot.min", "excanvas.min", "application"
    = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/redmond/jquery-ui.css", 'web-app-theme/base', "web-app-theme/themes/warehouse/style","web-app-theme/override", :cache => true
  %body
    #container
      #header
        %h1 Deliverables Schedule
        #user-navigation
          %ul{:class => "wat-cf"}
            %li 
              = link_to "Account", edit_user_path(:current)
            %li 
              = link_to "Logout", logout_path
        #main-navigation
          %ul{:class => "wat-cf"}
            %li
              = link_to "A46 As Builts", deliverables_path
      #wrapper{:class => "wat-cf"}
        #main
          .block{:id => "block-text"}
            .secondary-navigation
              %ul{:class => "wat-cf"}
                %li{:class => "active"}
                  = link_to " Deliveries", deliverables_path
                %li=link_to "Statuses", statuses_path
                - if can? :create, User
                  %li= link_to "Users", users_path
            .content
              = yield
              = notice
        #sidebar
          .block{:id => "block-tables"}
            %h3 Dashboards
            %ul{:class => "navigation"}
              %li=link_to "All Deliveries", deliveries_path
              - Deliverable.discipline_counts.each do |tag|
                - unless Deliverable.tagged_with(tag).count < 1
                  %li
                    = link_to tag.name, :controller => "deliverables", :action => "list_for_tag", :id => tag.id
              - Status.all(:order => "position").each do |status|
                %li
                  = link_to status.name, :controller => "statuses", :action => "list_for_status", :id => status.id